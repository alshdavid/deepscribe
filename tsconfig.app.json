{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": false,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": [
      "./.config/typings/import-map.d.ts"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}